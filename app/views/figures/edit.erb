<h2>Edit <%= @figure.name %></h2>
<form action="/figures/<%= @figure.id %>" method="POST">
  <input type="hidden" name="_hidden" value="patch">
  <label>Name</label>
  <input type="text" id="figure_name" name="figure[name]" value="<%= @figure.name %>"><br><br>

  <label>Edit Landmarks:</label>

  <% Landmark.all.each do |landmark| %>
    <input type="checkbox" id="<%= landmark.name %>" name="figure[landmark_ids][]" value="<% landmark.id %>"<%='checked' if @figure.landmarks.include?(landmark) %>><%= landmark.name %></input>
  <% end %><br>
  <label>Add New:</label>
  <input type="text" id="new_landmark" name="landmark[name]">
  <br><br>

  <label>Edit Title</label>

  <% Title.all.each do |title| %>
    <input type="checkbox" id="<%= title.name %>" name="figure[title_ids][]" value="<% title.id %>"<%='checked' if @figure.titles.include?(title) %>><%= title.name %></input>
  <% end %><br>
  <label>Add New:</label>
  <input type="text" id="new_title" name="title[name]">
  <br><br>

  <input type="submit" value="Edit Figure">

</form>
